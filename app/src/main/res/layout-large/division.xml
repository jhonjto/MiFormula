<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#EAF3FA" >

        <EditText
            android:id="@+id/etdivision1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvdivision"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal"
            android:padding="15dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvdiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etdivision1"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/tvdiv"
            android:textSize="30sp"
            android:padding="15dp" />

        <EditText
            android:id="@+id/etdivision2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvdiv"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal"
            android:padding="15dp" />

        <TextView
            android:id="@+id/tvresultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etdivision2"
            android:layout_marginBottom="18dp"
            android:text="@string/tvresultado"
            android:padding="15dp" />

        <Button
            android:id="@+id/btncalculardivision"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvresultado"
            android:background="@drawable/buttons"
            android:onClick="calculardivision"
            android:text="@string/btncalculardivision" />

        <TextView
            android:id="@+id/tvdivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="start|top"
            android:text="@string/tvdivision"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="30dp" />

    </RelativeLayout>

</ScrollView>