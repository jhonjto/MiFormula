<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <Button
        android:id="@+id/btnlogaritmonum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="logaritmonum"
        android:text="@string/btnlogaritmonum"
        android:background="@drawable/buttons"
        	style="@style/button_text"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvlogaritmonum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/tvlogaritmonum"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpotenciaa"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="46dp"
        android:layout_toStartOf="@+id/etpotenciaa"
        android:text="@string/tvresultado"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/etpotenciaa"
        android:text="@string/logaritmo"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etpotenciaa"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/a"
        android:inputType="number|numberSigned|numberDecimal"
        android:textSize="30sp">

        <requestFocus />
    </EditText>

</RelativeLayout>