<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

<RelativeLayout
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="460dp"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <Button
        android:id="@+id/btnvalorabsoluto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="79dp"
        android:onClick="valorabsoluto"
        android:text="@string/btnvalorabsoluto"
        android:background="@drawable/buttons"
        	style="@style/button_text" />

    <TextView
        android:id="@+id/tvvalorabsoluto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tvvalorabsoluto"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etvalorab"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvvalorabsoluto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:inputType="number|numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/tvdiagonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etvalorab"
        android:layout_centerHorizontal="true"
        android:text="@string/tvdiagonal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="35sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdiagonal"
        android:layout_centerHorizontal="true"
        android:text="@string/tvdiagonal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="35sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_toStartOf="@+id/etvalorab"
        android:text="@string/tvresultado"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etvalorab"
        android:layout_alignBottom="@+id/etvalorab"
        android:layout_alignEnd="@+id/tvresultado"
        android:text="@string/tvdiagonal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="45sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etvalorab"
        android:layout_alignBottom="@+id/etvalorab"
        android:layout_toEndOf="@+id/etvalorab"
        android:text="@string/tvdiagonal"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="45sp"
        android:visibility="visible" />

</RelativeLayout>

</ScrollView>