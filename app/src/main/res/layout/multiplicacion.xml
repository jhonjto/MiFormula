<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:background="#EAF3FA" >

        <EditText
            android:id="@+id/etmultiplicacion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvmultiplicacion"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal"
            android:padding="15dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvmul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etmultiplicacion1"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="@string/tvmul"
            android:textSize="30sp"
            android:padding="15dp" />

        <EditText
            android:id="@+id/etmultiplicacion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvmul"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal" />

        <TextView
            android:id="@+id/tvresultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etmultiplicacion2"
            android:layout_marginBottom="18dp"
            android:text="@string/tvresultado"
            android:padding="15dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btncalcularmultiplicacion"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvresultado"
            android:background="@drawable/buttons"
            android:onClick="calcularmultiplicacion"
            android:text="@string/btncalcularmultiplicacion" />

        <TextView
            android:id="@+id/tvmultiplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="start"
            android:text="@string/tvmultiplicacion"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="30dp"
            android:textSize="20sp" />

    </RelativeLayout>

</ScrollView>