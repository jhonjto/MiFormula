<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF3FA" >

    <Button
        android:id="@+id/btncrearformula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="grabar"
        android:text="@string/btncrearformula"
        android:background="@drawable/buttons"
        style="@style/button_text"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/etcontenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btncrearformula"
        android:layout_below="@+id/etnombre"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/infocontenido"
        android:inputType="textMultiLine"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/etnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/infocrear"
        android:inputType="text"
        android:textSize="50sp">

        <requestFocus />
    </EditText>

</RelativeLayout>