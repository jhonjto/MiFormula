<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF3FA" >

    <Button
        android:id="@+id/btncargarformula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="cargar"
        android:text="@string/btncargarformula"
        android:background="@drawable/buttons"
        style="@style/button_text"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:text="@string/tvnombre"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etcontenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btncargarformula"
        android:layout_below="@+id/tvnombre"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/contform"
        android:inputType="textMultiLine"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etbusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvnombre"
        android:layout_toEndOf="@+id/tvnombre"
        android:ems="10"
        android:hint="@string/numbsc"
        android:inputType="number"
        android:textSize="30sp">

        <requestFocus />
    </EditText>

</RelativeLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout-large/cargarformulas.xml -->