<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <TextView
        android:id="@+id/tvseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tvseno"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/etseno"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/_"
        android:inputType="number|numberDecimal|numberSigned"
        android:textSize="50sp">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etseno"
        android:layout_alignEnd="@+id/tvresultado"
        android:text="@string/tva"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="65sp" />

    <TextView
        android:id="@+id/tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etseno"
        android:layout_toEndOf="@+id/etseno"
        android:text="@string/tvb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="65sp" />

    <Button
        android:id="@+id/btnseno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="seno"
        android:text="@string/btnseno"
        android:background="@drawable/buttons"
        	style="@style/button_text"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etseno"
        android:layout_toStartOf="@+id/etseno"
        android:text="@string/tvresultado"
        android:textSize="50sp" />

</RelativeLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout-xlarge/seno.xml -->