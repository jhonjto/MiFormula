<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="center|top"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#EAF3FA" >

        <TextView
            android:id="@+id/tvecuacionsegundogrado"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tvecuacionsegundogrado"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btncalcularecuacionsegundogrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="calcularecuacionsegundogrado"
            android:text="@string/btncalcularecuacionsegundogrado"
            android:background="@drawable/buttons"
        	style="@style/button_text"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvresultado"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tvecuacionsegundogrado"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/etecsimple1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/ax_"
                android:inputType="number|numberDecimal|numberSigned"
                android:textSize="30sp">

<requestFocus /></EditText>

            <TextView
                android:id="@+id/tvsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvsum"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etecsimple2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/bx"
                android:inputType="number|numberDecimal|numberSigned"
                android:textSize="30sp">
                
            </EditText>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvsum"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etecsimple3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/c"
                android:inputType="number|numberDecimal|numberSigned"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvigual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvigual"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/etecsimple4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="number|numberDecimal|numberSigned"
                android:text="@string/_0"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvresultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btncalcularecuacionsegundogrado"
            android:layout_alignParentStart="true"
            android:text="@string/tvresultado"
            android:textSize="30sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="0"
        android:background="#EAF3FA" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.97"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:text="@string/lo_que_se"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout-large/ecuacionessegundogrado.xml -->