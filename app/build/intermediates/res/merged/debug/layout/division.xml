<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#EAF3FA"
        android:foregroundGravity="fill_horizontal|fill_vertical">

        <EditText
            android:id="@+id/etdivision1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal"
            android:padding="15dp"
            android:layout_below="@+id/tvdivision"
            android:layout_alignStart="@+id/btncalculardivision">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvdiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tvdiv"
            android:textSize="30sp"
            android:padding="15dp"
            android:layout_below="@+id/etdivision1"
            android:layout_alignStart="@+id/etdivision1" />

        <EditText
            android:id="@+id/etdivision2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvdiv"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="number|numberSigned|numberDecimal"
            android:padding="15dp" />

        <TextView
            android:id="@+id/tvresultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etdivision2"
            android:layout_marginBottom="18dp"
            android:text="@string/tvresultado"
            android:padding="15dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btncalculardivision"
            style="@style/button_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:onClick="calculardivision"
            android:text="@string/btncalculardivision"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tvdivision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="start|top"
            android:text="@string/tvdivision"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:padding="30dp" />

    </RelativeLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout/division.xml -->