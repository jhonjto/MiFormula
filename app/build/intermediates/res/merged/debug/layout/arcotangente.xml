<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <TextView
        android:id="@+id/tvarcotangente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tvarcotangente"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etarcotangente"
        android:layout_toEndOf="@+id/etarcotangente"
        android:text="@string/tvb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/etarcotangente"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvarcotangente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="@string/x"
        android:inputType="number|numberDecimal|numberSigned" >
<requestFocus /></EditText>

    <EditText
        android:id="@+id/tvarcotangentey"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvarcotangente"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/y"
        android:inputType="number|numberDecimal|numberSigned" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvarcotangentey"
        android:layout_toEndOf="@+id/tvarcotangentey"
        android:text="@string/tvb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/tvarcotangentex"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvarcotangentey"
        android:layout_alignBottom="@+id/tvarcotangentey"
        android:layout_alignStart="@+id/tvarcotangente"
        android:ems="10"
        android:hint="@string/x"
        android:inputType="number|numberDecimal|numberSigned" >
        
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvarcotangentex"
        android:layout_toStartOf="@+id/tvarcotangentex"
        android:text="@string/tva"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnarcotangentexy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="arcotangentexy"
        android:text="@string/btnarcotangentexy"
        android:background="@drawable/buttons"
        	style="@style/button_text" />

    <Button
        android:id="@+id/btnarcotangente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnarcotangentexy"
        android:layout_alignParentStart="true"
        android:onClick="arcotangente"
        android:text="@string/btnarcotangente"
        android:background="@drawable/buttons"
        	style="@style/button_text" />

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvarcotangentex"
        android:text="@string/tvresultado"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etarcotangente"
        android:layout_toStartOf="@+id/etarcotangente"
        android:text="@string/tva"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="35sp" />

</RelativeLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout/arcotangente.xml -->