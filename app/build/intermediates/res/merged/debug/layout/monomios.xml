<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:background="#EAF3FA" >

        <Button
            android:id="@+id/btncalcularmonomiosuma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="sumamonomio"
            android:text="@string/btncalcularmonomiosuma"
            android:background="@drawable/buttons"
        	style="@style/button_text" />

        <TextView
            android:id="@+id/tvsumamonomio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tvsumamonomio"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/x"
            android:layout_toStartOf="@+id/x"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/et6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/y"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvresulmonomiosuma"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/btncalcularmonomiosuma"
            android:layout_centerHorizontal="true"
            android:text="@string/tvresulmonomiosuma" />

        <EditText
            android:id="@+id/et3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvsum"
            android:layout_toStartOf="@+id/tvsum"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/y"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvsum"
            android:layout_toStartOf="@+id/et3"
            android:text="@string/y"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/y"
            android:layout_toStartOf="@+id/y"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/x"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/et2"
            android:text="@string/x"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvy1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/x"
            android:layout_alignStart="@+id/et6"
            android:text="@string/y"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et6"
            android:layout_alignBottom="@+id/et6"
            android:layout_toStartOf="@+id/et6"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvx1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et5"
            android:layout_alignTop="@+id/tvy1"
            android:text="@string/x"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/x"
            android:layout_toStartOf="@+id/et5"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvsum"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvx1"
            android:layout_alignBottom="@+id/tvx1"
            android:layout_toStartOf="@+id/et4"
            android:text="@string/tvsum"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:background="#EAF3FA" >

        <Button
            android:id="@+id/btncalcularrestamonomio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="restamonomio"
            android:text="@string/btncalcularmonomiosuma"
            android:background="@drawable/buttons"
        	style="@style/button_text" />

        <TextView
            android:id="@+id/tvrestamonomio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/tvrestamonomio"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et2_6"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et2_5"
            android:layout_alignBottom="@+id/et2_5"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" >
        </EditText>

        <EditText
            android:id="@+id/et2_1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/et2_4"
            android:layout_alignBottom="@+id/et2_4"
            android:layout_toStartOf="@+id/tvx2_1"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvresulmonomioresta"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/btncalcularrestamonomio"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="@string/tvresulmonomiosuma" />

        <TextView
            android:id="@+id/tvy2_2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et2_6"
            android:layout_centerVertical="true"
            android:text="@string/y"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et2_5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvy2_2"
            android:layout_toStartOf="@+id/et2_6"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvx2_2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et2_5"
            android:layout_alignTop="@+id/et2_4"
            android:text="@string/x"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et2_4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvy2_2"
            android:layout_toStartOf="@+id/et2_5"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvres2_1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et2_5"
            android:layout_toStartOf="@+id/et2_4"
            android:text="@string/tvres"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/et2_3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvres2_1"
            android:layout_toStartOf="@+id/tvres2_1"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvy2_1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvres2_1"
            android:layout_toStartOf="@+id/et2_3"
            android:text="@string/y"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/et2_2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvy2_1"
            android:layout_toStartOf="@+id/tvy2_1"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvx2_1"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et2_2"
            android:layout_toStartOf="@+id/et2_2"
            android:text="@string/x"
            android:textSize="30sp" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout/monomios.xml -->