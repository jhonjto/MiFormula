<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical"
    android:background="#EAF3FA" >

    <TextView
        android:id="@+id/tvporcentaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tvporcentaje"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btncalcularporcentaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="porcentaje"
        android:text="@string/btncalcularporcentaje"
        android:background="@drawable/buttons"
        	style="@style/button_text" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/porciento"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvigual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvigual"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ettrapecio1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" >

            <requestFocus />

        </EditText>

        <TextView
            android:id="@+id/tvmul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvmul"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ettrapecio2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />

        <TextView
            android:id="@+id/tvsobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sobre"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/ettrapecio3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number|numberDecimal|numberSigned" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvresultado"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:text="@string/tvresultado"
        android:textSize="16sp" />

</RelativeLayout><!-- From: file:/C:/Users/jhon/AndroidStudioProjects/MiFormula/app/src/main/res/layout/calcularporcentaje.xml -->